<div class="user_form">
  <div class="title"><p>パスワード変更</p></div>


  <div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <%# <div>Currently waiting confirmation for: <%= resource.unconfirmed_email</div> %>
      <%# <% end %>
      <div class="form-box">
        <%= f.label :password, '新しいパスワード' %>
        <%= f.password_field :password, placeholder: "6文字以上、半角英数字", autofocus: true, class: "user-pass" %>
        <%= f.label :password_confirmation, '新しいパスワード（確認）' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "confirm-pass" %>
        <%= f.label :current_password, '現在のパスワード（確認用）' %>
        <%= f.password_field :current_password, autocomplete: "off", class: "current-pass" %>
      </div>

      <%= f.submit "更新", class: "submit-btn" %>
    <% end %>
  </div>
  <div class="back"><%= link_to "戻る", :back, class: "back_btn" %></div>
</div>