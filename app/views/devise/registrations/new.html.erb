<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
    </div>
    <%= f.text_field :name, autofocus: true %>必須
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム（6文字以内）</label>
    </div>
    <%= f.text_field :nickname %>必須
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>必須
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード（6文字以上、半角英数字）</label>
    </div>
    <%= f.password_field :password %>必須
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード（確認）</label>
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>必須
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
