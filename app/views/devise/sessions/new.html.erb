<div class="user_edit">
  <h2 class="title">ログイン</h2>

  <div class="form">
    <%# ログイン時のエラーメッセージ  %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="form-box">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-email" %>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "user-pass" %>

        <% if devise_mapping.rememberable? %>
          <div class="remember_me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>

      <%= f.submit "ログイン", class: "login_btn" %>
    <% end %>
  </div>

</div>

