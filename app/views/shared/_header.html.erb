<header class="header">
  <div class="user_state">ロゴ</div>
  <div class="user_state">
    <ul class="state_lists">
      <% if user_signed_in? %>
        <li>マイページ</li>
        <li>ログアウト</li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
